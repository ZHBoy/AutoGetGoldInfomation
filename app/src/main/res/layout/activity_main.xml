<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metaapp.autogetgoldinfomation.RoundProgressBar
        android:id="@+id/countdown"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:backWidth="@dimen/dp_56"
        app:backColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_150"
        android:layout_marginEnd="@dimen/dp_12"
        app:roundWidth="@dimen/dp_5"
        app:centen_icon="@drawable/popover_gold"
        app:roundColor="#f5f5f5"
        app:roundProgressColor="#F36C45"/>

    <TextView
        android:id="@+id/award_anim"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintTop_toTopOf="@+id/countdown"
        app:layout_constraintBottom_toBottomOf="@+id/countdown"
        app:layout_constraintStart_toStartOf="@+id/countdown"
        app:layout_constraintEnd_toEndOf="@+id/countdown"
        android:gravity="center"
        android:background="@drawable/icon_sign_bg"
        android:textColor="#FFF596"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>